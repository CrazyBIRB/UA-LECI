#Ex1_v2
#mapa de registos
# val: $t0
# n: $t1
# min: $t2
# max: $t3
# temp: $t4

	.data
str1: 	.asciiz "Digite ate 20 inteiros (zero para terminar):"
str2: 	.asciiz "Máximo/mínimo são:  "
	.eqv print_string, 4
	.eqv print_int10, 1
	.eqv read_int, 5
	.eqv print_char, 11
	.text
	.globl main
	
main:
	li $t1, 0
	li $t2, 0x7FFFFFFF
	li $t3,	0X80000000
	
do:
	la $a0, str1
	li $v0, print_string	# print_string(...);
	syscall
	li $v0, read_int
	syscall
	move $t0, $v0 # val = read_int(); 
	
if:
	beq $t0, 0, eif

if2:
	ble $t0, $t3, if3
	move $t3, $t0
	
if3:
	bge $t0, $t2, eif
	move $t2, $t0
	
eif:
	addi $t1, $t1, 1
	
while: 
	bge $t1, 20, ewhile
        beq $t0, 0, ewhile

ewhile: 
	la $a0, str2
	li $v0, print_string	#print_string(...);
	syscall
	
	move $a0, $t3
	li $v0, print_int10
	syscall
	
	li $a0, ':'
	li $v0, print_char	#print_char(':');
	syscall
	
	move $a0, $t2
	li $v0, print_int10
	syscall
	
	li $v0, 0
	jr $ra